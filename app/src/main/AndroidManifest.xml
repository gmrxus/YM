<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.mrxus.ym">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.YmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.activity.InitSetActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.activity.YunshiActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.activity.JiankangWenzhangActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.activity.SetPasswordActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>